@model List<RolesViewModel>

@{
    ViewData["Title"] = "Role Details";
}
<div class="mt-2">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h3>Role Details</h3>
            <p>List of Employee Details</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    </div>
</div>


<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr class="bg-secondary text-white">
            <th>Id</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Role</td>
                <td>
                    <div class="d-flex justify-content-md-evenly">
                        <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary btn-sm mr-2">
                            <i class="bi bi-pencil-square"></i>
                        </a> |
                        <a asp-action="Details" asp-route-id="@role.Id" class="btn btn-info btn-sm mr-2">
                            <i class="bi bi-info-circle"></i>
                        </a> |
                        <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger btn-sm mr-2">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
