@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <div class="row">
        <div class="ml-offset col-lg-5 col-md-6 offeset-lg-4 offset-md-1">
            <div class="panel border bg-white py-2">
                <div class="panel-heading">
                    <h2 class="pt-3 font-weight-bold login-title">@ViewData["Title"]</h2>
                </div>
                <form asp-action="Login" method="post" class="login-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group pt-3">
                        <div class="input-feild">
                            <div class="text-center">
                                <span class="fa fa-user"></span>
                                <label asp-for="Username" class="form-label">Username</label>
                                <b><span class="text-danger">*</span></b>
                                <input asp-for="Username" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group pt-2">
                        <div class="input-feild">
                            <div class="text-center">
                                <span class="fa fa-lock"></span>
                                <label asp-for="Password" class="form-label">Password</label>
                                <b><span class="text-danger">*</span></b>
                                <input asp-for="Password" type="password" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="form-inline fr mt-4">
                        <a id="forget" class="font-weight-bold">Forgot Password?</a>
                    </div>
                    <div class="loginbtn">
                        <button type="submit" class="btn btn-primary login-button">Login</button>
                    </div>
                    <div class="text-center py-3 text-muted">Don't have an Account?<a id="forget" href="/Account/Register" .021>Create an Account</a></div>
                </form>
            </div>
        </div>
    </div>
</div>