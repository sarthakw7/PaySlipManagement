@model List<LeaveRequestsViewModel>

@{
    ViewData["Title"] = "Leave Requests";
}
<style>
    .custom-select {
        width: 250px;
    }

    .bg-secondary {
        background-color: #6c757d !important;
    }

    .bg-light-orange {
        background-color: #FF8C00 !important; /* Light Orange Color */
        color: white; /* Optional: Text color */
    }

    .form-inline .form-group {
        display: flex;
        align-items: center;
    }

        .form-inline .form-group label {
            margin-right: 10px;
        }
</style>
<div class="mt-2">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <p>List of Leave Requests</p>
        </div>
    </div>
</div>
<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr class="bg-light-orange">
            <th>Id</th>
            <th>Employee Code</th>
            <th>Leave Type</th>
            <th>Reason</th>
            <th>From Date</th>
            <th>To Date</th>
            <th>Leaves Count</th>
            <th>Approval Person</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.Id</td>
                <td>@request.Emp_Code</td>
                <td>@request.LeaveType</td>
                <td>@request.Reason</td>
                <td>@request.FromDate</td>
                <td>@request.ToDate</td>
                <td>@request.LeavesCount</td>
                <td>@request.ApprovalPerson</td>
                <td>@request.Status</td>
            </tr>
        }
    </tbody>
</table>

